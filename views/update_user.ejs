                <input type="radio" id="radio-7" name="ChestPainType" value="AYS"  <%= user.ChestPainType == 'AYS' ? 'checked' : '' %> >
                <label for="radio-7" class="radio-label">AYS</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-8" name="ChestPainType" value="TA"  <%= user.ChestPainType == 'TA' ? 'checked' : '' %> >
