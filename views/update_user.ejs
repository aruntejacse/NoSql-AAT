 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="Sex" class="text-dark">Sex</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="Sex" value="M" <%= user.Sex == 'M' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">M</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="Sex" value="F"  <%= user.Sex == 'F' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">F</label>
            </div>
        </div>
        <div class="form-group">
            <label for="ChestPainType" class="text-dark">ChestPainType</label>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="ChestPainType" value="ATA" <%= user.ChestPainType == 'ATA' ? 'checked' : '' %>>
                <label for="radio-5" class="radio-label">ATA</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="ChestPainType" value="NAP"  <%= user.ChestPainType == 'NAP' ? 'checked' : '' %> >
